{
    "name": "socialconnect/http-client",
    "description": "PSR-18 HTTP Client on top of Guzzle PSR7",
    "keywords": [
        "http-client",
        "curl",
        "psr-18"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Patsura",
            "email": "talk@dmtry.me"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "ext-curl": "*",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/simple-cache": "^1.0",
        "guzzlehttp/psr7": "^2"
    },
    "autoload": {
        "psr-4": {
            "SocialConnect\\HttpClient\\": "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Test\\" : "tests/"
        }
    },
    "require-dev": {
        "symfony/http-foundation": "^3.4",
        "phpunit/phpunit": "^6.5",
        "phpstan/phpstan-shim": "^0.11.12"
    }
}
